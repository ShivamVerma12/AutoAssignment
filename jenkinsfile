pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: "bus_ticket" , url: 'https://github.com/ShivamVerma12/AutoAssignment.git'
            }   
        }


        stage('Run Code') {
            steps {               
                
                sh 'python3 -m  pytest test.py'
                        
            }
            
        }
        
        stage('Generate Allure'){
            steps {
            
                sh 'python3 -m pytest --alluredir=./allure_final test.py'

                allure includeProperties: false, jdk: '', results: [[path: 'allure_final']]
  
            }
        }

        
    
        }
    }




